
<div class="field">
    <label>Categories</label>
    <select name="category" class="ui fluid dropdown">
        <option value="{{defaultcategory.name}}"></option>
        <option value="all">VIEW ALL</option>
        {{#each categories}}
            <option value="{{name}}">{{name}}</option>
        {{/each}}
    </select>
</div>
<button class="ui teal submit right floated button" value="Submit">Filter By Category</button>
