<section class="ui raised segment">
    <h2>  <i class="teal large plus circle icon"></i>Add A New Category</h2>
    <form class="ui form" action="/add-category" method="POST" >
        <div class="inline field">
            <label>Filter By Category</label>
            <input type="text" name="name" placeholder="Give your POI a name here" required>
        </div>
        <section class="ui grid">
            <div class="right floated column">
                <button class="ui teal submit right floated button" value="submit">Add Category</button>
            </div>
        </section>
    </form>
    {{> error }}
</section>