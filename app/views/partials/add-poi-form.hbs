<section class="ui raised segment">
    <h2>ADD A POINT OF INTEREST</h2>
        <form class="ui segment form" action="/addpoi" method="POST">
            <div class="field">
                <label>Name of POI</label>
                <input type="text" name="name" placeholder="Give your POI a name here" required>
            </div>
            <div class="field">
                <label>Description</label>
                <input type="text" name="description" placeholder="Give your POI a description" />
            </div>
            <div class="field">
                <label>Upload an Image</label>
                <input type="file" name="image">
            </div>
            <div class="one field">
                <label>Location</label>
                <div class="two fields">
                    <div class="field">
                        <label>Longitude</label>
                        <input type="number" name="longitude" step="0.01" required>
                    </div>
                    <div class="field">
                        <label>Latitude</label>
                        <input type="number" name="latitude" step="0.01" required>
                    </div>
                </div>
            </div>

            <button class="ui blue submit button" value="Upload">Add POI</button>
        </form>
        {{> error }}
</section>