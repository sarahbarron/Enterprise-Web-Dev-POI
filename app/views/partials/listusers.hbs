<section class="ui raised segment">
{{#each users}}
    <div class="ui raised segment">
        <div class="ui grid">
            <div class="row">
                <div class="column ">
                    <i class=" huge icon github"></i>
                </div>
                <div class="column four wide">
                    {{!-- first and last name --}}
                    <h2 class="ui header blue">
                        <a href="/view-user/{{id}}">{{firstName}} {{lastName}}</a>
                    </h2>
                    {{!-- number of assessments --}}
                    <p> number of poi: </p>
                </div>
                <div class="column">
                    {{!-- Icon with a link to delete a member --}}
                    <a href="/delete-user/{{_id}}" class="ui icon button">
                        <i class="red icon trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</section>