<section class="ui raised segment">
    <div class="ui grid ">
        <div class="ui form eight wide column">
            <div class="ui stacked segment">
                <form action="/update-poi/{{poi._id}}" method="POST">
                    <h3 class="ui header">Update Point Of Interest (POI)</h3>
                    <div class="field">
                        <label>Name of POI</label>
                        <input type="text" name="name" value="{{poi.name}}" required>
                    </div>
                    <div class="field">
                        <label>Description</label>
                        <textarea name="description" placeholder="{{poi.description}}" value="{{poi.description}} "></textarea>
                    </div>
                    <div class="field">
                        <label>Upload an Image</label>
                        <input type="file" name="image" value="{{poi.image}}">
                    </div>
                    <div class="field">
                        <label>Location</label>
                        <div class="two fields">
                            <div class="field">
                                <label>Longitude</label>
                                <input type="number" name="longitude" step="0.01" value="{{poi.longitude}}" required>
                            </div>
                            <div class="field">
                                <label>Latitude</label>
                                <input type="number" name="latitude" step="0.01" value="{{poi.latitude}}" required>
                            </div>
                        </div>
                    </div>

                    <button class="ui blue submit button" value="Upload">Update POI</button>
                </form>
                {{> error }}
            </div>
        </div>
        <aside class="four wide column">
            <img src="../images/waterford_greenway.jpg" class="ui medium image"/>
        </aside>
    </div>
</section>