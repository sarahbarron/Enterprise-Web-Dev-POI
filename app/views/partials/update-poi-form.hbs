<section class="ui raised segment">
    <h2>UPDATE POINT OF INTEREST</h2>
    <form class="ui segment form" action="/update-poi/{{poi._id}}" method="POST">
        <div class="field">
            <label>Name of POI</label>
            <input type="text" name="name" value="{{poi.name}}" required />
        </div>

        <div class="field">
            <label>Category</label>
            <select name="category" class="ui fluid dropdown">
                <option value="{{poi.category}}">{{poi.category}}</option>
                <option value="Waterford Greenway">Waterford Greenway</option>
                <option value="Great Eastern Greenway">Great Eastern Greenway</option>
                <option value="Great Western Greenway">Great Western Greenway </option>
                <option value="Boyne Greenway">Boyne Greenway</option>
            </select>
        </div>

        <div class="field">
            <label>Description</label>
            <input type="text" name="description" value="{{poi.description}}" />
        </div>
        <div class="field">
            <label>Upload an Image</label>
            <input type="file" name="image" value="{{poi.image}}" />
        </div>
        <div class="field">
            <label>Location</label>
            <div class="two fields">
                <div class="field">
                    <label>Longitude</label>
                    <input type="number" name="longitude" step="0.01" value="{{poi.longitude}}"required />
                </div>
                <div class="field">
                    <label>Latitude</label>
                    <input type="number" name="latitude" step="0.01" value="{{poi.latitude}}"required />
                </div>
            </div>
        </div>

        <button class="ui blue submit button" value="Upload">UPDATE</button>
    </form>
    {{> error }}
</section>