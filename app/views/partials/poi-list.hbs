<section class="ui raised segment">
    <div class="ui grid">
        <aside class="ui four wide column"><img src="../images/waterford_greenway.jpg" class="ui medium image"/></aside>
        <article class="twelve wide column">
            <div class="ui raised very padded container segment">
                <form class="ui form" action="/home" method="POST">
                        {{> filter-category}}
                </form>
            {{> error }}
            </div>
            <table class="ui fixed table segment">
                <thead>
                <tr>
                    <th colspan="1"></th>
                    <th colspan="3">Name</th>
                    <th colspan="3">Category</th>
                    <th colspan="1"></th>
                    {{#if onlyusercanview}}
                    <th colspan="1"></th>
                    <th colspan="1"></th>
                    {{/if}}
                </tr>
                </thead>
                <tbody>
                {{#each poi}}
                    <tr>
                        <td colspan="1">  <i class="teal large map marker alternate icon"></i></td>
                        <td colspan="3">  <a href="/view-poi/{{_id}}">{{name}} </a></td>
                        <td colspan="3">{{category.name}}</td>
                        <td colspan="1">
                            <a href="/view-poi/{{_id}}" class="ui icon button"><i class="eye icon"></i></a>
                        </td>
<!--               Only a user can update and delete their pois so don't allow admin access to these functions-->
                        {{#if ../onlyusercanview}}

                            <td colspan="1">
                            <a href="/delete-poi/{{_id}}" class="ui icon button">
                                <i class="icon trash"></i>
                            </a>
                            </td>
                            <td colspan="1">
                                <a href="/update-poi/{{_id}}" class="ui icon button">Update</a>
                            </td>

                        {{/if}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
            {{> error }}
        </article>
    </div>
</section>